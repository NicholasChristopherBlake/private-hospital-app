{
  "compilerOptions": {
    "sourceMap": true,
    "outDir": "./build",
    "noImplicitAny": true,
    "module": "ESNext",
    "strict": true,
    "target": "es5",
    "jsx": "react-jsx",
    "allowJs": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "*": ["./src/*"]
    },
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "include": ["config/jest/setupTests.ts", "src/**/*.ts", "src/**/*.tsx"],
  "exclude": [
    "./node_modules",
    "./build"
    // "src/**/*.test.ts",
    // "src/**/*.test.tsx"
  ],
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  }
}
